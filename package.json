{
  "name": "riotgear",
  "version": "1.17.2",
  "description": "The open source component library for RiotJS",
  "main": "dist/rg.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "jshint": "jshint . --exclude-path=.gitignore",
    "riot": "riot components dist/rg.js --type es6",
    "concat": "cat lib/**/*.js dist/rg.js | babel --plugins object-assign --out-file dist/rg.js ",
    "uglify": "uglifyjs --output dist/rg.min.js  --mangle -- dist/rg.js",
    "test": "karma start",
    "dev": "npm run riot && npm run concat && npm run uglify",
    "build": "npm run dev && npm run test"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/RiotGear/rg.git"
  },
  "keywords": [
    "riotjs",
    "riot",
    "webcomponents",
    "html5",
    "es6",
    "javascript",
    "tags",
    "components",
    "riotgear"
  ],
  "author": "Gregory Pratt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RiotGear/rg/issues"
  },
  "homepage": "https://riotgear.js.org/",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.23",
    "babel-plugin-object-assign": "^1.2.1",
    "chai": "^3.2.0",
    "jquery": "^2.1.4",
    "jshint": "^2.7.0",
    "karma": "^0.13.9",
    "karma-babel-preprocessor": "^5.2.2",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.5.2",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-riot": "^1.0.0",
    "mocha": "^2.3.2",
    "normalize.css": "^3.0.3",
    "phantomjs": "^1.9.18",
    "riot": "~2.2.4",
    "uglify-js": "^2.4.23"
  }
}
